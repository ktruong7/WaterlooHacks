<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/offer_image"
            android:src="@drawable/apples"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"></RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="offer description"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:id="@+id/offer_description"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/offer_name"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="offer name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:id="@+id/offer_name"
            android:layout_marginLeft="10dp"
            android:layout_above="@+id/offer_description"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="valid for: "
            android:textSize="16sp"
            android:textColor="@color/white"
            android:id="@+id/valid_label"
            android:layout_above="@+id/offer_description"
            android:layout_toStartOf="@+id/valid_hours" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 hours"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:id="@+id/valid_hours"
            android:layout_marginRight="10dp"
            android:layout_alignTop="@+id/valid_label"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</RelativeLayout>